function load_fonts()
	local font_mem = fetch(font)
	if font_mem then
		font_mem:poke(0x4000)
	end
	local font_alt_mem = fetch(font_alt)
	if font_alt_mem then
		font_alt_mem:poke(0x5600)
	end
end


