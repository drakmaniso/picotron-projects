function open_window(main_path, requested_path)
	local location = main_path or requested_path
	local title = main_path and (parent_folder(main_path):basename().."/")
		or requested_path:basename()

	local tabbed = true
	local fullscreen = false
	if config.settings.window_mode == "fullscreen" then
		tabbed = false
		fullscreen = true
	elseif config.settings.window_mode == "window" then
		log("windowed mode")
		tabbed = false
		fullscreen = false
	end
	
	window {
		location = location,
		jump_to_matching_window = true,
--		unique_location = tabbed or fullscreen, -- TODO: is deprecated since
		pauseable = false,
		immortal = false,
		capture_escapes = true,
		tabbed = tabbed,
		fullscreen = fullscreen,
		width = 300, height = 200,
		title = title,
		icon = get_spr(1),
	}
end


