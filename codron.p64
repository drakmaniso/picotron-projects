function get_requested_path()
	local this_is_loaded_cart = env().argv[0] == "/system/apps/terminal.lua"
	local default_path = this_is_loaded_cart
		and "/test/test2/main.lua"
		or "/ram/cart/main.lua"
	return env().argv[1] or default_path
end


