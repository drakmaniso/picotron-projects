local config = require "src/config.lua"
local filetree = require "src/filetree.lua"
local ui_head = require "src/ui/head.lua"


-------------------------------------------------------------------------------------------


return function(editor)
	local self = {
		width = 40,
		height = 15,
		hidden = true,
	}
	ui_head.new(self)
	
	
	-- Private fields
	local onode -- Origin node (for multifile)
	local ocol, orow = 1, 1 -- Origin
	local anode -- Anchore node (starting file for search)
	local acol, arow = 1, 1 -- Anchor (starting position for search)
	local target = "" -- The text we're looking for
	local direction = "forward"
	local multifile = false
	local previous_target = ""
	local no_match = false

	
	function self:target()
		return target
	end
	
	
	function self:in_multifile_search()
		return multifile
	end
	
	
	function self:click(msg)
		return false
	end
	
	
	local function update_search(and_show)
		local buffer = editor:buffer()
		if target == "" then
			editor:set_node(onode)
			buffer = editor:buffer()
			buffer:set_cursor(ocol, orow)
			if and_show then
				editor:center_cursor()
			end
			anode = onode
			acol, arow = ocol, orow
			filetree.foreach(
				function(node)
					if node:is_file() then
						node:buffer():clear_matches()
					end
				end
			)
			return
		end
		
		if multifile then
			filetree.foreach(
				function(node)
					if node:is_file() then
						node:buffer():search_all(target, true)
					end
				end
			)
		else
			buffer:search_all(target, true)
		end
		
		if anode ~= editor:node() then
			anode = editor:node()
		end
			
		local found = false
		if direction == "forward" then
--			buffer:set_cursor(ocol, orow) -- TODO: remove
			for scol, srow, ecol, erow in buffer:matches() do
				if (srow == arow and scol >= acol) or (srow > arow) then
					buffer:select(scol, srow, ecol, erow)
					found = true
					break
				end
			end				
			if not found and multifile then
				local next_file = editor:node()
				repeat
					next_file = filetree.next_file(next_file)
				until next_file == nil or next_file:buffer():has_match()
				if not next_file then
					next_file = filetree.first_file()
					while next_file ~= nil
						and next_file ~= editor:node()
						and next_file:buffer():has_match() == false
					do
						next_file = filetree.next_file(next_file)
					end
				end
				if next_file then
					editor:set_node(next_file)
					buffer = editor:buffer()
					arow, acol = 1, 1
					for scol, srow, ecol, erow in buffer:matches() do
						buffer:select(scol, srow, ecol, erow)
						found = true
						break
					end				
				end
			elseif not found then
				for scol, srow, ecol, erow in buffer:matches() do
					buffer:select(scol, srow, ecol, erow)
					found = true
					break
				end
			end
		elseif direction == "backward" then
			buffer:set_cursor(ocol, orow)
			for scol, srow, ecol, erow in buffer:matches_reverse() do
				if (srow == arow and ecol <= acol) or (srow < arow) then
					buffer:select(scol, srow, ecol, erow)
					found = true
					break
				end
			end
			if not found then
				for scol, srow, ecol, erow in buffer:matches_reverse() do
					buffer:select(scol, srow, ecol, erow)
					found = true
					break
				end
			end
		end
		no_match = not found
		if found and and_show then
			editor:center_cursor(true)
		end
	end

	
	-- Called by the editor
	function self:launch_search(dir, multi)
		direction = dir
		multifile = (multi == "multifile")
		local buffer = editor:buffer()
		self:set_keyboard_focus(true)
		if self.hidden then
			self.hidden = false
			if buffer:number_of_selections() > 0 then 
				local scol, srow, ecol, erow = buffer:current_selection(cursor)
				target = buffer:range_string(scol, srow, ecol, erow)
			end
			onode = editor:node()
			ocol, orow, _, _ = buffer:current_selection()
			if not ocol then
				ocol, orow = buffer:active_cursor_pos()
			end
			acol, arow = ocol, orow
			no_match = false
			update_search(false)
		else
			self:search_next()
		end
	end
	
	
	function self:search_next()
		local buffer = editor:buffer()
		if target == "" then
			target = previous_target
		elseif direction == "forward" then
			acol, arow = buffer:active_cursor_pos()
		elseif direction == "backward" then
			acol, arow, _, _ = buffer:current_selection()
			if not acol then
				acol, arow = buffer:active_cursor_pos()
			end
		end
		update_search(true)
	end
	
	
	function self:stop_search()
		self:set_keyboard_focus(false)
		acol, arow = 1, 1
		previous_target = target
		target = ""
		self.hidden = true
		filetree.foreach(
			function(node)
				if node:is_file() then
					node:buffer():clear_matches()
				end
			end
		)
	end
	
	
	function self:update(msg)
		local buffer = editor:buffer()
		if not buffer then return end

		if not self:has_keyboard_focus() then
			return
		end
		
		while peektext() do
			local k = readtext()
			target ..= k
			update_search(true)
		end

		if keyp("enter") then
			self:stop_search()
			if key("shift") then
				local col, row = buffer:active_cursor_pos()
				buffer:set_cursor(col, row)
			end
		elseif keyp("backspace") then
			if key("ctrl") then
				target = ""
				update_search(false)
			else
				target = target:sub(1, -2)
				update_search(true)
			end
		elseif keyp("delete") then
			buffer:delete_selection()
			self:stop_search()
		elseif keyp("escape") then
			editor:set_node(onode)
			buffer = editor:buffer()
			buffer:set_cursor(ocol, orow)
			self:stop_search()
			editor:center_cursor()
		elseif keyp("pagedown") or (keyp("tab") and not key("shift")) then
			direction = "forward"
			self:search_next()
		elseif keyp("pageup") or (keyp("tab") and key("shift")) then
			direction = "backward"
			self:search_next()
		elseif keyp("h") then
			if target ~= "" then
				filetree.foreach(
					function(node)
						if node:is_file() then
							node:buffer():search_all(target)
						end
					end
				)
			end
		elseif key("ctrl") and keyp("w") then
			-- TODO: same problem as double ctrl-f...
			-- need to come from the editor instead.
			--[[buffer:next_word(false)
			buffer:previous_word(false)
			buffer:next_word(true)
			self:search_next()]]
		elseif key("ctrl") and keyp("a") then
			buffer:select_all_matches()
			self:stop_search()
		elseif key("ctrl") and keyp("x") then
			buffer:cut()
			update_search(true)
		elseif key("ctrl") and keyp("c") then
			buffer:copy()
			update_search(true)
		elseif key("ctrl") and keyp("v") then
			buffer:paste()
			update_search(true)
		-- TODO: add undo/redo, Ctrl-L
		end
		local moved = false
		if not key("ctrl") and not key("alt") then
			if keyp("up") then buffer:move_up(false); moved = true
			elseif keyp("down") then buffer:move_down(false); moved = true
			elseif keyp("right") then buffer:move_right(false); moved = true
			elseif keyp("left") then buffer:move_left(false); moved = true
			elseif keyp("home") then buffer:move_home(false, false); moved = true
			elseif keyp("end") then buffer:move_end(false); moved = true
			end
		end
		if moved then
			editor:center_cursor()
			self:stop_search()
		end
	end
	
	
	function self:draw(msg)
		local theme = config.theme
		rectfill(1, 1, self.width - 2, self.height - 1, theme.ui_bg)
		line(2, 0, self.width - 3, 0, theme.editor_bg)
		line(0, 2, 0, self.height - 1, theme.editor_bg)
		line(self.width - 1, 2, self.width - 1, self.height - 1, theme.editor_bg)
		pset(1, 1, theme.editor_bg)
		pset(self.width - 2, 1, theme.editor_bg)
		line(1, 2, 2, 1, theme.editor_bg)
		line(self.width - 2, 2, self.width - 3, 1, theme.editor_bg)
		pal(7, theme.ui_fg)
		spr(24, 8, 4)
		pal(7, 7)
		print(target, 8 + 16, 5, no_match and theme.ui_fg_warning or theme.ui_fg_highlight)
	end
	
	return self
end


