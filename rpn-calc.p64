--[[pod_format="raw",created="2026-01-10 13:36:29",modified="2026-01-11 15:12:54",revision=1424]]
local buffer = ""


function entry()
	return buffer
end


function update_entry()
	local changed = false
	while peektext() do
		clear_error()
		local c = readtext()
		if is_uppercase(c) then
			pick(string.byte(c) - string.byte("A") + 1)
		else
			buffer ..= c
			changed = true
		end
	end
	if changed then
		buffer = parse(buffer)
		undo_checkpoint()
	end
	
	local plain = not key("shift") and not key("ctrl") and not key("alt")
	local shifted = key("shift") and not key("ctrl") and not key("alt")
	local ctrled = not key("shift") and key("ctrl") and not key("alt")
	local ctrl_shifted = key("shift") and key("ctrl") and not key("alt")
	
	if keyp("enter") then
		clear_error()
		if plain then
			cmd_dup()
		elseif shifted then
			cmd_dupfar()
		end
	end
	
	if keyp("del") then
		clear_error()
		if plain then
			cmd_drop()
		elseif shifted then
			cmd_dropfar()
		elseif ctrl_shifted then
			cmd_clear()
		end
	end
	
	if keyp("backspace") then
		clear_error()
		if plain then
			buffer = string.sub(buffer, 1, #buffer - 1)
		elseif ctrled then
			buffer = ""
		end
	end
	
	if keyp("tab") then
		clear_error()
		if plain then
			cmd_swap()
		elseif shifted then
			cmd_swapfar()
		end
	end
	
	if keyp("pageup") then
		clear_error()
		if plain then
			cmd_roll()
		end
	end
	
	if keyp("pagedown") then
		clear_error()
		if plain then
			cmd_unroll()
		end
	end
end

