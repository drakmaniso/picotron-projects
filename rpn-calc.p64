function op_plus()
	if depth() < 2 then
		show_error([["+" needs 2 numbers]])
		return
	end
	local result = get(2) + get(1)
	local source = str(get(2)).."+"..str(get(1))
	cmd_drop()
	cmd_drop()
	push(result, source)
end


