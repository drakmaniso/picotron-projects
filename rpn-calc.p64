local error_msg = ""


function show_error(msg)
	error_msg = msg
end


function clear_error()
	error_msg = ""
end


function draw_error()
	if error_msg == "" then
		return
	end
	local width = get_display():width()
	local msg = "\014"..error_msg
	local w, h = print(msg, -1000, -1000)
	w, h = w + 1000, h + 1000
	rrectfill(0, 0, width, h + 4, 0, 8)
	print(msg, (width - w) // 2, 2, 7)
end

