--[[pod_format="raw",created="2024-08-27 17:11:11",modified="2024-08-29 16:24:33",revision=1331]]
in_game = {}


-- The Board
local tiling = "square"
local gravity = pos(0, 1)

local cells = false
local gems = false
local states = false

local matches = {}

-- State Machine
local substate = false
local clock = 1.0
local interaction = false


----------------------------------------------------------------------


-- Functions for substate need to be global, because of Lua
-- forward-declaration rule for locals.


function creating_the_board()
	if tiling == "square" then
		cells = sgrid_new_cells(pos(12, 9))
	else
		cells = hgrid_new_cells(pos(13, 8))
	end
	gems = cells:new_grid()
	states = cells:new_grid()
	matches = {}
	return creating_missing_gems
end


function creating_missing_gems()
	logic_fill_gems(cells, gems, states)
	clock = 0.0
	return animating_new_gems
end


function animating_new_gems()
	clock += 1.0 / 8.0
	if clock < 1.0 then
		return animating_new_gems
	end
	-- Clean-up
	states:foreachpos(
		function(p, state)
			if state.name == "new" then
				states:del(p)
			end
		end
	)
	return waiting_for_input
end


function waiting_for_input()
	local mx, my, mb, _, _ = mouse()
	if mb == 0x1 then
		local mp = cells:pos(mx, my)
		if gems:get(mp) then
			interaction = { name = "swap", position = mp, start = t() }
			return waiting_for_swap
		end
	end
	if keyp("s") then
		tiling = "square"
		gravity = pos(0, 1)
		return creating_the_board
	end
	if keyp("h") then
		tiling = "hex"
		gravity = pos(0, 2)
		return creating_the_board
	end
	if keyp("del") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, nil)
		states = cells:new_grid()
		matches = {}
	end
	if keyp("r") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, gem_rainbow)
		states:set(p, { name = "new" })
		matches = {}
	end
	if keyp("a") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, gem_air)
		states:set(p, { name = "new" })
		matches = {}
	end
	if keyp("m") then
		return checking_matches
	end
	return waiting_for_input
end


function waiting_for_swap()
	local mx, my, mb, _, _ = mouse()
	if mb == 0x1 then
		local mp = cells:pos(mx, my)
		if cells:distance(mp, interaction.position) == 1
			and gems:get(mp)
		then
			interaction.target = mp
			local gem0 = gems:get(interaction.position)
			local gem1 = gems:get(interaction.target)
			gems:set(interaction.position, gem1)
			gems:set(interaction.target, gem0)
			local m, _ = logic_find_matches(gems)
			gems:set(interaction.position, gem0)
			gems:set(interaction.target, gem1)
			if #m > 0 then
				states:set(interaction.position, {
					name = "swapping",
					selected = true,
					target = mp,
				})
				states:set(mp, {
					name = "swapping",
					target = interaction.position,
				})
				interaction = false
				clock = 0.0
				return swapping_two_gems
			end
			interaction = false
			return waiting_for_input
		end
		return waiting_for_swap
	end
	interaction = false
	return waiting_for_input
end


function swapping_two_gems()
	clock += 1.0 / 16.0
	if clock < 1.0 then
		return swapping_two_gems
	end
	local reinsert = {}
	states:foreachpos(
		function(p, state)
			if state.name == "swapping" then
				add(reinsert, { gem = gems:get(p), position = state.target })
				gems:del(p)
				states:del(p)
			end
		end
	)
	foreach(
		reinsert,
		function(r) gems:set(r.position, r.gem) end
	)
	return checking_matches
end


function checking_matches()
	matches, states = logic_find_matches(gems)
	if #matches > 0 then
		clock = 0.0
		return clearing_gems
	end
	return creating_missing_gems
end


function clearing_gems()
	clock += 1.0 / 16.0
	if clock < 1.0 then
		return clearing_gems
	end
	-- Clean-up
	states:foreachpos(
		function(p, state)
			if state.name == "matching" then
				gems:del(p)
				states:del(p)
			end
		end
	)
	return applying_gravity
end


function applying_gravity()
	local some_gems_are_falling = false
	gems:foreachpos(
		function(p, gem)
			local below = p + gravity
			local distance = 0
			while cells:get(below) and cells:get(below) & rock_mask == 0 do
				if not gems:get(below) then
					some_gems_are_falling = true
					distance += 1
				end
				below += gravity
			end
			if distance > 0 then
				states:set(p, { name = "falling", target = p + distance * gravity })
			end
		end
	)
	if some_gems_are_falling then
		clock = 0.0
		return animating_falling_gems
	end
	return creating_missing_gems
end


function animating_falling_gems()
	clock += 1.0 / 16.0
	if clock < 1.0 then
		return animating_falling_gems
	end
	local fell_gems = {}
	states:foreachpos(
		function(p, state)
			if state.name == "falling" then
				local new_p = state.target
				add(fell_gems, { gem = gems:get(p), pos = new_p })
				gems:del(p)
				states:del(p)
			end
		end
	)
	foreach(fell_gems,
		function(fell_gem)
			gems:set(fell_gem.pos, fell_gem.gem)
			states:del(fell_gem.pos)
		end
	)
	return checking_matches
end


-----------------------------------------------------------------------


function in_game:enter()
end


function in_game:update()
	if not substate then
		substate = creating_the_board
	end
	substate = substate()
end


function in_game:draw()
	if not cells then
		return
	end
	-- Display match counts
	cursor(4, 4, 7)
	foreach(
		matches,
		function(match)
			print(gem_names[match.colour]..": "..tostr(match.count))
		end
	)
	-- Draw the board
	gfx_draw_cells(cells)
	gfx_draw_gems(cells, gems, states, clock)
	-- Update the cursor
	local mx, my = mouse()
	local cursor_pos = cells:pos(mx, my)
	if cells:get(cursor_pos) then
		window { cursor = "grab" }
	else
		window { cursor = "" }
	end
	if false then
		rectfill(mx + 4 - 10, my + 10, mx + 36, my + 20, 7)
		print(tostr(cursor_pos.x)..","..tostr(cursor_pos.y), mx + 6 - 10, my + 12, 0)
	end
end
