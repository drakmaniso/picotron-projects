--- Board Creation Logic


function logic_new_test_cells(tiling, for_editor)
	local grid
	local size
	if tiling == "square" then
		grid = sgrid_new()
		size = pos(12, 9)
	elseif tiling == "hex" then
		grid = hgrid_new()
		size = pos(13, 16)
	end
	local p = pos(0, 0)
	local with_bad_cells = rnd() < 0.66
	while p.x < size.x do
		while p.y < size.y do
			local cell = cell_good
			if not for_editor then
				if with_bad_cells and rnd() < 0.50 then
					cell = cell_bad
				end
				if rnd() < 0.03 then
					if rnd() < 0.60 then
						cell |= rock_full
					elseif rnd() < 0.75 then
						cell |= rock_cracked
					else
						cell |= rock_broken
					end
				elseif rnd() < 0.005 then
					cell |= math.random(5, 5 + 5) << 4
				elseif rnd() < 0.005 then
					cell |= cell_door
				end
			end
			grid:set(p, cell)
			p.y += (tiling == "hex") and 2 or 1
		end
		p.y = 0
		p.x += 1
	end
	if not for_editor then
		grid:set(pos(size.x // 2 - 1, size.y // 2), nil)
		grid:set(pos(size.x // 2, size.y // 2), nil)
	end
	return grid
end


------------------------------------------------------------------------


local function random_gem()
	if true and rnd() < 0.05 then
		local gem = gem_rainbow + flr(rnd(6))
		if gem == gem_robot_E then
			gem += flr(rnd(4))
		end
		return gem
	end
	return gem_color_first + flr(rnd(gem_color_last - gem_color_first))
end


function logic_fill_gems(cells, gems, states)
	-- TODO: transform into a coroutine
	-- TODO: fill in reverse gravity order
	cells:foreachpos(
		function(p, cell)
			if (cell & cell_mask == 0) or (cell & rock_mask != 0) then
				return
			end
			local gem = gems:get(p)
			if not gem then
				local attempts = 0
				local found = false
				while attempts < 8 and not found do
					gem = random_gem()
					gems:set(p, gem)
					-- TODO: only check matches locally?
					local m, _ = logic_find_matches(gems)
					if #m == 0 then
						found = true
					end
					attempts += 1
				end
				if attempts == 8 then
					gem = gem_gift
					gems:set(p, gem)
				end
				states:set(p, { name = "new" })
			end
		end
	)
end

