	end
end


function metatable:unflag(p, flag)
	if p.x < 0 or p.y < 0 or p.x >= max_width or p.y >= max_height then
		return nil
	end
	local index = p.x + (p.y * max_width)
	if self[index] then
		self[index] &= ~flag
	end
end


function metatable:del(pos)
