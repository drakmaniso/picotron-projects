	cells = hgrid_new_cells(pos(12, 9))
	gems = cells:new_grid()
	logic_fill_gems(cells, gems)
	window { cursor = "crosshair" }
end


function _update()
	if keyp("s") then
		cells = sgrid_new_cells(pos(12, 9))
		gems = cells:new_grid()
		logic_fill_gems(cells, gems)
	end
	if keyp("h") then
		cells = hgrid_new_cells(pos(13, 8))
		gems = cells:new_grid()
		logic_fill_gems(cells, gems)
	end
	if keyp("del") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, nil)
	end
end


function _draw()
