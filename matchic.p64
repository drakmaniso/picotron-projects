--- Spell Logic


function logic_gain_mana(stats, matches)
	foreach(
		matches,
		function(match)
			if match.count > 3 then
				stats.mana += 10 * (match.count - 3)
			end
			if stats.in_cascade then
				stats.mana += 5
			end
			stats.in_cascade = true
			if match.colour == gem_rainbow then
				foreach(
					{ gem_air, gem_fire, gem_day, gem_earth, gem_water, gem_night },
					function(g) stats.colour[g] += match.count end
				)
			else
				stats.colours[match.colour] += match.count
			end
		end
	)
end

