--[[pod_format="raw",created="2024-03-30 05:39:34",modified="2024-08-26 13:36:26",revision=1459]]
include "drakma.lua"
include "src/constants.lua"
include "src/sgrid.lua"
include "src/hgrid.lua"
include "src/gfx.lua"
include "src/logic.lua"
include "debug.lua"


local cells = nil
local gems = nil
local flags = nil
local matches = nil


function _init()
	cells = sgrid_new_cells(pos(12, 9))
	gems = cells:new_grid()
	logic_fill_gems(cells, gems)
	flags = nil
	matches = nil
	window { cursor = "" }
end


function _update()
	if keyp("s") then
		cells = sgrid_new_cells(pos(12, 9))
		gems = cells:new_grid()
		logic_fill_gems(cells, gems)
		flags = nil
		matches = nil
	end
	if keyp("h") then
		cells = hgrid_new_cells(pos(13, 8))
		gems = cells:new_grid()
		logic_fill_gems(cells, gems)
		flags = nil
		matches = nil
	end
	if keyp("del") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, nil)
		flags = nil
		matches = nil
	end
	if keyp("w") then
		local mx, my = mouse()
		local p = cells:pos(mx, my)
		gems:set(p, gem_rainbow)
		flags = nil
		matches = nil
	end
	if keyp("m") then
		flags = flag_all_matches(gems)
		matches = logic_find_matches(gems)
	end
end


function _draw()
	fetch("pal/0.pal"):poke(0x5000)
	cls(63)
	rectfill(0, 0, 116, 269, 55)
	-- Display match counts
	if matches then
		cursor(4, 4, 7)
		foreach(
			matches,
			function(match)
				print(gem_names[match.colour]..": "..tostr(match.count))
			end
		)
	end
	-- Strike matches
	gfx_draw_cells(cells)
	gfx_draw_gems(cells, gems)
	if flags then
		flags:foreachpos(
			function(p, flag)
				if flag and flag != 0 then
					local x, y = flags:coords_gem(p)
					line(x + 4, y + 29 - 5, x + 29 - 5, y + 4, 7)
					line(x + 4, y + 29 - 4, x + 29 - 4, y + 4, 7)
					line(x + 5, y + 29 - 4, x + 29 - 4, y + 5, 7)
				end
			end
		)
	end
	-- Draw debug tooltip
	local mx, my = mouse()
	local cursor_pos = cells:pos(mx, my)
	if gems:get(cursor_pos) then
		window { cursor = "grab" }
		local matching = flags and flags:get(cursor_pos) or nil
		if matching and matching != 0 then
			rectfill(mx - 10, my - 16, mx + 12, my - 8, 7)
			print(string.format("%02x", matching), mx - 4, my - 15, 0)
		end
	else
		window { cursor = "" }
	end
	if false then
		rectfill(mx + 4 - 10, my + 10, mx + 36, my + 20, 7)
		print(tostr(cursor_pos.x)..","..tostr(cursor_pos.y), mx + 6 - 10, my + 12, 0)
	end
end
