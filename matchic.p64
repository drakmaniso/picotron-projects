--[[pod_format="raw",created="2024-08-24 08:12:55",modified="2024-08-29 16:24:33",revision=2543]]
--- Match-3 Logic

local function random_gem()
	if true and rnd() < 0.05 then
		local gem = gem_rainbow + flr(rnd(6))
		if gem == gem_robot_E then
			gem += flr(rnd(4))
		end
		return gem
	end
	return gem_color_first + flr(rnd(gem_color_last - gem_color_first))
end


function logic_fill_gems(cells, gems, states)
	-- TODO: transform into a coroutine
	cells:foreachpos(
		function(p, cell)
			if (cell & cell_mask == 0) or (cell & rock_mask != 0) then
				return
			end
			local gem = gems:get(p)
			if not gem then
				local attempts = 0
				local found = false
				while attempts < 8 and not found do
					gem = random_gem()
					gems:set(p, gem)
					-- TODO: only check matches locally?
					local m, _ = logic_find_matches(gems)
					if #m == 0 then
						found = true
					end
					attempts += 1
				end
				if attempts == 8 then
					gem = gem_gift
					gems:set(p, gem)
				end
				states:set(p, { name = "new" })
			end
		end
	)
end


------------------------------------------------------------------------


local function logic_is_matching(gem1, gem2)
	if (not gem1) or (not gem2) then
		return false
	end
	
	-- Only colored gems can match.
	if (gem1 < gem_color_first) or (gem1 > gem_color_last) then
		return false
	end
	if (gem2 < gem_color_first) or (gem2 > gem_color_last) then
		return false
	end

	return (gem1 == gem2) or (gem1 == gem_rainbow)
		or (gem2 == gem_rainbow)
end


--------------------------------------------------------------------------


local function check_3_and_flag(gems, p0, p1, p2, state, states)
	local gem0 = gems:get(p0)
	local gem1 = gems:get(p1)
	local gem2 = gems:get(p2)
	if logic_is_matching(gem0, gem1)
		and logic_is_matching(gem0, gem2)
		and logic_is_matching(gem1, gem2)
	then
		states:merge(p0, state)
		states:merge(p1, state)
		states:merge(p2, state)
	end
end


local function check_4_and_flag(gems, p0, p1, p2, p3, state, states)
	local gem0 = gems:get(p0)
	local gem1 = gems:get(p1)
	local gem2 = gems:get(p2)
	local gem3 = gems:get(p3)
	if logic_is_matching(gem0, gem1)
		and logic_is_matching(gem0, gem2)
		and logic_is_matching(gem0, gem3)
		and logic_is_matching(gem1, gem2)
		and logic_is_matching(gem1, gem3)
		and logic_is_matching(gem2, gem3)
	then
		states:merge(p0, state)
		states:merge(p1, state)
		states:merge(p2, state)
		states:merge(p3, state)
	end
end


local function flag_sgrid_matches_at(gems, p0, states)
	check_3_and_flag( gems,
		p0,
		p0 + pos(0, 1),
		p0 + pos(0, 2),
		{ name = "matching", vertical = true }, states )
	check_3_and_flag( gems,
		p0,
		p0 + pos(1, 0),
		p0 + pos(2, 0),
		{ name = "matching", horizontal= true }, states )
	check_4_and_flag( gems,
		p0,
		p0 + pos(1, 0),
		p0 + pos(0, 1),
		p0 + pos(1, 1),
		{ name = "matching", vertical = true, horizontal = true }, states )
end


local function flag_hgrid_matches_at(gems, p0, states)
	check_3_and_flag( gems,
		p0,
		p0 + pos(0, 2),
		p0 + pos(0, 4),
		{ name = "matching", vertical = true }, states )
	check_3_and_flag( gems,
		p0,
		p0 + pos(1, 1),
		p0 + pos(2, 2),
		{ name = "matching", horizontal_SE = true }, states )
	check_3_and_flag( gems,
		p0,
		p0 + pos(1, -1),
		p0 + pos(2, -2),
		{ name = "matching", horizontal_NE = true }, states )
	local p1 = p0 + pos(1, 1)
	local p2 = p0 + pos(1, -1)
	local p3 = p0 + pos(2, 0)
	local gem0 = gems:get(p0)
	local gem1 = gems:get(p1)
	local gem2 = gems:get(p2)
	local gem3 = gems:get(p3)
	if logic_is_matching(gem0, gem1)
		and logic_is_matching(gem0, gem2)
		and logic_is_matching(gem0, gem3)
		and logic_is_matching(gem1, gem2)
		and logic_is_matching(gem1, gem3)
		and logic_is_matching(gem2, gem3)
	then
		states:merge(p0, { name = "matching", vertical = true, horizontal_NE = true, horizontal_SE = true})
		states:merge(p1, { name = "matching", vertical = true, horizontal_SE = true })
		states:merge(p2, { name = "matching", vertical = true, horizontal_NE = true })
		states:merge(p3, { name = "matching", vertical = true, horizontal_NE = true, horizontal_SE = true})
	end
end


local function flag_all_matches(gems)
	local states = gems:new_grid()
	if gems.is_square then
		gems:foreachpos(
			function(p, _gem)
				flag_sgrid_matches_at(gems, p, states)
			end
		)
	elseif gems.is_hex then
		gems:foreachpos(
			function(p, _gem)
				flag_hgrid_matches_at(gems, p, states)
			end
		)
	end
	return states
end


---------------------------------------------------------------------------


local function count_this_match(gems, states, p)
	-- A simple flood-fill algorithm to group all
	-- intersecting linear matches together.
	local colour = gem_rainbow
	local count = 0
	local remaining = { p }
	local rainbows = {}
	while #remaining > 0 do
		local current = deli(remaining)
		local gem = gems:get(current)
		local state = states:get(current)
		if state and state.name == "matching"
			and (not state.counted)
			and logic_is_matching(colour, gem)
		then
			if gem == gem_rainbow then
				-- Rainbow gems can be part of multiple matches,
				-- so they need to be unflagged at the end.
				add(rainbows, current)
			else
				colour = gem
			end
			count += 1
			states:merge(current, { counted = true })
			local neighbours = gems:neighbours(current)
			foreach(
				neighbours,
				function(n)
					local s = states:get(n.position)
					if not s then
						return
					end
					if s and s.name == "matching"
						and (not s.counted)
						and s[n.direction]
					then
						add(remaining, n.position)
					end
				end
			)
		end
	end
	foreach(
		rainbows,
		function(p)
			states:merge(p, { counted = false })
		end
	)
	return { colour = colour, count = count }
end


function logic_find_matches(gems)
	local states = flag_all_matches(gems)
	local matches = {}
	states:foreachpos(
		function(p, state)
			if state and state.name == "matching"
				and (not state.counted)
			then
				local count = count_this_match(gems, states, p)
				if count.colour == gem_rainbow then
					-- Ignore, as this is probably a stray rainbow that was unflagged
					-- at the end of `count_this_match`.
					-- TODO: an edge case is when there is a legitime match of
					-- only rainbow gems (e.g. 3 rainbows surrounded by black things).
				else
					add(matches, count)
				end
			end
		end
	)
	return matches, states
end
